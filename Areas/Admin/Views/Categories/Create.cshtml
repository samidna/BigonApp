@model Category
@{
    var categories = ViewBag.Categories;
}

<div class="card">
    <div class="card-header">
        <h5>Add Category</h5>
    </div>
    <div class="card-block">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label asp-for=Name class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for=Name type="text" class="form-control" placeholder="Title">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for=ParentId class="col-sm-2 col-form-label">Categories</label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for=ParentId asp-items="categories">
                        <option selected disabled>--Select--</option>
                    </select>
                </div>
            </div>
            <a asp-action="index" asp-controller="categories" class="btn btn-light">Back</a>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>

