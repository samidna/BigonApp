@model BlogPost
@{
    var categories = ViewBag.Categories;
}

<div class="card">
    <div class="card-header">
        <h5>Add Blogpost</h5>
    </div>
    <div class="card-block">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label asp-for=Title class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for=Title type="text" class="form-control" placeholder="Title">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for=Body class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for=Body placeholder="Body" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for=CategoryId class="col-sm-2 col-form-label">Categories</label>
                <div class="col-sm-10">
                    <select asp-for="CategoryId" asp-items="categories">
                        <option selected disabled>--Select--</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for=FilePath class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input name="file" type="file" class="form-control">
                </div>
            </div>
            <a asp-action="index" asp-controller="blogposts" class="btn btn-light">Back</a>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>

