@model List<Color>

<div class="card">
    <div class="card-header">
        <div>
            <h5>Colors</h5>
            <a asp-action="create" asp-controller="color" class="btn btn-success">Add</a>
        </div>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Color</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var color in Model)
                    {
                        <tr>
                            <td>@color.Name</td>
                            <td><span color style="background:@color.HexCode"></span></td>
                            <td>
                                <a class="btn btn-primary" asp-action="details" asp-controller="color" asp-route-id="@color.Id">Info</a>
                                <a class="btn btn-warning" asp-action="update" asp-controller="color" asp-route-id="@color.Id">Update</a>
                                <a onclick="remove(@color.Id,'@color.Name')" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section custom_js {
    <script>

        function remove(id, name) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        method:"POST",
                        url: '@Url.Action("delete","color")',
                        data: {id},
                        success:(result)=>{
                            if(!result.error){
                                Swal.fire({
                                    title: "Deleted!",
                                    text: result.message,
                                    icon: "success"
                                });

                                setTimeout(()=>{
                                    location.reload()
                                },2000)
                                return;
                            }
                            Swal.fire({
                                title: "Not deleted!",
                                text: result.message,
                                icon: "error"
                            });
                        },
                        error: (error) => {

                        }


                    })
                }
            });
        }

    </script>



}
<style>
    span[color] {
        display: inline-block;
        border-radius: 100%;
        border: 1px solid white;
        width: 30px;
        height: 30px;
    }
</style>
